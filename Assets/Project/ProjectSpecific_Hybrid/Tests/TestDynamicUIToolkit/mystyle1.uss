TextField > TextInput {
    background-color: rgba(0, 0, 0, 0);
    -unity-background-image-tint-color: rgba(255, 255, 255, 0);
    border-left-color: rgba(0, 0, 0, 0);
    border-right-color: rgba(0, 0, 0, 0);
    border-top-color: rgba(0, 0, 0, 0);
    border-bottom-color: rgba(0, 0, 0, 0);
    padding: 0;
    border-left-width: 0;
    border-right-width: 0;
    border-top-width: 0;
    border-bottom-width: 0;
    --unity-cursor-color: rgb(255, 255, 255);
    color: rgba(255, 255, 255, 255);
    -unity-font-style: normal;
}

TextField {
    margin: 0;
    padding: 0;
    -unity-font: none;
    -unity-font-style: normal;
    font-size: 24px;
    -unity-font-definition: resource('SubsetOTF/CN/SourceHanSansCN-Regular SDF');
}

Label {
    padding: 0;
    color: rgba(255, 255, 255, 255);
    -unity-font: none;
    font-size: 24px;
}

.animated_guy:hover {
    transition-duration: 0.5s;
    transition-property: all;
    scale: 1.5 1.5;
    transition-timing-function: ease-out-elastic;
    transition-delay: 0.1s;
}

.animated_guy {
    transition-duration: 0.25s;
    transition-property: all;
    scale: 1 1;
    transition-timing-function: ease-in-out-cubic;
}

.animated_guy:focus {
    transition-duration: 0.5s;
    transition-property: all;
    scale: 1.5 1.5;
    transition-timing-function: ease-out-elastic;
    transition-delay: 0.1s;
}
